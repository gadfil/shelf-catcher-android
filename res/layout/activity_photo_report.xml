<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <SurfaceView android:id="@+id/surfaceView"

                 android:layout_width="fill_parent" android:layout_height="fill_parent"
                 android:layout_above="@+id/controller_container"/>

    <FrameLayout android:id="@+id/photoFrame"

                 android:layout_width="fill_parent" android:layout_height="fill_parent"
                 android:layout_toLeftOf="@+id/textView3"
                 android:layout_toRightOf="@+id/textView2"
                 android:layout_below="@+id/textView"
                 android:background="@android:color/transparent"
                 android:layout_above="@+id/textView4">


    </FrameLayout>
    <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/progressBar"
            />

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="100dp"
                 android:id="@+id/controller_container"
                 android:layout_alignParentBottom="true"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/border"
            android:id="@+id/textView"
            android:background="@drawable/border"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="@dimen/border"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:id="@+id/textView2" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_above="@+id/controller_container"/>
    <TextView
            android:layout_width="@dimen/border"
            android:layout_height="fill_parent"
            android:background="@drawable/border"
            android:id="@+id/textView3"
            android:layout_above="@+id/controller_container"
            android:layout_alignParentRight="true"
            />
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/border"
            android:background="@drawable/border"
            android:id="@+id/textView4"
            android:layout_toLeftOf="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/controller_container"/>

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_centerVertical="true"
            android:background="@android:color/white">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:hint="max Y"
                android:id="@+id/etMaxY" android:layout_gravity="left|top"
                android:layout_margin="5dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:hint="min Y"
                android:id="@+id/etMinY" android:layout_gravity="left|top"
                android:layout_margin="5dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:hint="max Z"
                android:id="@+id/etMaxZ" android:layout_gravity="left|top"
                android:layout_margin="5dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:ems="10"
                android:hint="min Z"
                android:id="@+id/etMinZ" android:layout_gravity="left|top"
                android:layout_margin="5dp"/>

    </LinearLayout>
</RelativeLayout>